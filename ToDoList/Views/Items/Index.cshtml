@{
  Layout = "_Layout";
}

@using ToDoList.Models;
@model List<ToDoList.Models.Item>;

<h1>Items</h1>

@if (@Model.Count == 0)
{
  <h3>No items have been added yet!</h3>
} 

@using (Html.BeginForm("SaveCheck", "Items", FormMethod.Post))
{
  @for (int i = 0; i < Model.Count; i++)
  {
    @Html.HiddenFor(m => Model[i].ItemId)
    @Html.HiddenFor(m => Model[i].Description)
    @Html.CheckBoxFor(m => Model[i].Checked)
    @Html.LabelFor(m=> Model[i].Checked, Model[i].Description)
  }
  <input type="submit" value="SaveCheck" />
}

